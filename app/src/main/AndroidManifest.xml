<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dashtricks.pakistan.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Activities.VisualizationActivity"
            android:label="@string/title_activity_visualization" >
        </activity>
        <activity
            android:name=".Activities.FeedbackActivity"
            android:label="@string/title_activity_feedback" >
        </activity>
        <activity
            android:name=".Activities.SelectScenarioActivity"
            android:label="@string/title_activity_select_scenario" >
        </activity>
        <activity
            android:name=".Activities.SelectImmunizationPlanActivity"
            android:label="@string/title_activity_select_immunization_plan" >
        </activity>
        <activity
            android:name=".Activities.CreateImmunizationPlanActivity"
            android:label="@string/title_activity_create_immunization_plan" >
        </activity>
        <activity
            android:name=".Activities.CreateScenarioActivity"
            android:label="@string/title_activity_create_scenario" >
        </activity>
        <activity
            android:name=".Activities.ScenarioCreationActivity"
            android:label="@string/title_activity_scenario_creation" >
        </activity>
    </application>

    <!-- Only for testing with internet. Not needed for releases. -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
